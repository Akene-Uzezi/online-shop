<%- include('../../shared/includes/head', {title: 'Sign up' }) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
    </head>

    <body>
        <%- include('../../shared/includes/header') %>
            <main>
                <h1>Create new account</h1>
                <% if(inputData.errorMessage) { %>
                    <section class="alert">
                        <h2>Invalid Input</h2>
                        <p>
                            <%= inputData.errorMessage %>
                        </p>
                    </section>
                    <% } %>
                        <form action="/signup" method="POST">
                            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                            <p>
                                <label for="username">Username</label>
                                <input type="text" name="username" id="username" value="<%= inputData.username %>"
                                    required>
                            </p>
                            <p>
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" value="<%= inputData.password %>">
                            </p>
                            <p>
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" name="confirmPassword" id="confirmPassword"
                                    value="<%= inputData.confirmPassword %>">
                            </p>
                            <hr>
                            <p>
                                <label for="fullname">Full Name</label>
                                <input type="text" name="fullname" id="fullname" value=" <%= inputData.fullname %>">
                            </p>
                            <p>
                                <label for="street">Street</label>
                                <input type="text" name="street" id="street" required value="<%= inputData.street %>">
                            </p>
                            <p>
                                <label for="postal">Postal Code</label>
                                <input type="text" name="postal" id="postal" minlength="5" maxlength="5" required
                                    value="<%= inputData.postal %>">
                            </p>
                            <p>
                                <label for="city">City</label>
                                <input type="text" name="city" id="city" required value="<%= inputData.city %>">
                            </p>
                            <button class="btn">Create Account</button>
                            <p id="switch-form">Already have an account? <a href="/login">Login</a></p>
                        </form>
            </main>
            <%- include('../../shared/includes/footer') %>
    </body>

    </html>